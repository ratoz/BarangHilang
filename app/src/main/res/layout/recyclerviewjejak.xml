<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_postanda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_postjejak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorPrimary" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/rapisisi1"
                    android:layout_marginRight="@dimen/rapisisi1">

                    <TextView
                        android:id="@+id/j_namapost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Judul"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/j_typepost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="type"
                        android:textColor="#000000"
                        android:textSize="@dimen/text" />
                    <TextView
                        android:id="@+id/j_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="desc"
                        android:textColor="#000000"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:id="@+id/j_kronologi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Kronologi"
                        android:textColor="#000000"
                        android:textSize="@dimen/text" />
                    <TextView
                        android:id="@+id/j_doneat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Selesai Pada..."
                        android:textColor="#000000"
                        android:textSize="@dimen/text" />


                    <TextView
                        android:id="@+id/idpost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="idpost"
                        android:textColor="#311124"
                        android:textSize="@dimen/text"
                        android:visibility="gone" />
                </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
